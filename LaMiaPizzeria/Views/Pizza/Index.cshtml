@{
    Layout = null;
}

@using LaMiaPizzeria.Models
@model List<PizzaViewModel>

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>ATuttaPizza</title>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <nav class="navbar navbar-dark bg-danger">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="https://media.istockphoto.com/vectors/pizza-vector-emblem-vector-id675968126?k=6&m=675968126&s=612x612&w=0&h=KNG6oXUdR3U5yoWmJvRgZgO2EbAwRTqVH2itb_k6_GY=" alt="Logo A TuttaPizza" width="60" height="50" class="d-inline-block align-text-middle ">
                A Tutta Pizza
            </a>
        </div>
    </nav>

    <div class="container my-5 text-center" style="max-width: 580px;">
        <h1>A Tutta Pizza!</h1>
        <p class="lead">Concediti ora una favolosa pausa ricca di gusto e di passione!</p>
        <button type="button" class="btn btn-danger">Ordina Subito!</button>
        <button type="button" class="btn btn-success">Contattaci!</button>
        @Html.ActionLink("Crea nuova pizza", "Create", "Pizza", null, new { @class ="btn btn-danger" })
    </div>
    <div class="container shadow p-3 mb-5 bg-body rounded">


        <div class="row">
            @if(Model.Count == 0)
            {
                <h5>Nessuna pizza trovata!</h5>
            }
            @foreach (var pizza in Model)
            {
                <div class="col-md-4">
                    <div class="card  text-center" style="width: 18rem;">
                        <img src="@pizza.UrlImmagine" class="card-img-top" alt="Margherita" />
                        <div class="card-body">
                            <h5 class="card-title">@pizza.Nome</h5>
                            @Html.ActionLink("Dettaglio", "Dettaglio", "Pizza", new { id = pizza.Id}, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>
</body>
</html>
